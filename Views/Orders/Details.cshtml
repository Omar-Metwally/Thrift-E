@model List<OrderViewModel>
@{
    double? totalAmount = 0;
    ViewData["Title"] = "Order Details";
}
<section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-8">
                <div class="card" style="border-radius: 10px;">
                    <div class="card-header px-4 py-5">
                        <h5 class="text-muted mb-0">Thanks for your Order, <span style="color: darkslategray;">@Model.First().CustomerName</span>!</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <p class="lead fw-normal mb-0" style="color: darkslategray;">Receipt</p>
                        </div>
                        @foreach (var item in Model){
                            totalAmount += @item.Total;
                        <div class="card shadow-0 border mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-2">
                                        <img src="@item.Image1"
                                             class="img-fluid" alt="Phone">
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0">@item.ProductName</p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">@item.CategoryName</p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">@Html.Raw(item.Description)</p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">@item.Qty Unit</p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">@item.Total EGP</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        }
                        <div class="d-flex justify-content-between mb-1">
                            <p class="fw-bold mb-0">Order Date: @Model.First().OrderDate</p>
                            <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery fee</span>20 EGP</p>
                        </div>
                        <div class="d-flex justify-content-between mb-1">
                            <p class="text-muted mb-0 small">Please contact us for any issue with the order</p>
                            <p class="text-muted mb-0"><span class="fw-bold me-4">Discount</span> 0 EGP</p>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <p class="text-muted mb-0 small">Don't have a good day have a great day!</p>
                            <p class="text-muted mb-0"><span class="fw-bold me-4">Total</span> @(totalAmount + 20) EGP</p>
                        </div>



                    </div>
                    <div class="card-footer border-0 px-4 py-5"
                         style="background-color: darkslategray; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                        <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">
                            Total paid: <span class="h2 mb-0 ms-2">@(totalAmount + 20) EGP</span>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>