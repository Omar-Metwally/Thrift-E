@{
    ViewData["Title"] = "ReOrder";
}
<div class="row m-5">

    <div class="col-md-6">
        <form class="mb-5" method="post" id="contactForm" name="contactForm" novalidate="novalidate">
            <div class="row">
                <div class="col-md-12 form-group">
                    <label for="SKULabel" class="form-label">Suppler</label>
                    <select class="form-control">
                        <option >Select The Suppler</option>
                        <option >احمد و شركائه للاسيتيراد الملابس</option>
                        <option >عبدو لتجارة البالة</option>
                        <option >شركة الفلاح للتوزيع</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <label for="SKULabel" class="form-label">Product</label>
                    <select class="form-control" asp-items="@ViewBag.Products"><option>Select The Product</option></select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <label for="SKULabel" class="form-label">Order QTY</label>
                    <input type="number" class="form-control" placeholder="Enter Order QTY">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <label for="message" class="col-form-label">Message</label>
                    <textarea class="form-control" name="message" id="message" cols="30" rows="7"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group m-2">
                        <input type="submit" value="Send Order" class="btn btn-primary mb-4" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea'
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}