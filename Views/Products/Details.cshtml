@model dynamic

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>@Model.ProductName</h1>
            <hr class="my-4">
            <div class="row">
                <div class="col-sm-3 border-right"><strong>Product ID:</strong></div>
                <div class="col-sm-9">@Model.ProductId</div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col-sm-3 border-right"><strong>Category:</strong></div>
                <div class="col-sm-9">@Model.CategoryName</div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col-sm-3 border-right"><strong>Price:</strong></div>
                <div class="col-sm-9">@Model.Price EGP</div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col-sm-3 border-right"><strong>In stock:</strong></div>
                <div class="col-sm-9">@Model.InstockQty</div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col-sm-3 border-right"><strong>Measure of Scale:</strong></div>
                <div class="col-sm-9">@Model.MeasureOfScale</div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col-sm-3 border-right"><strong>Purchase Date:</strong></div>
                <div class="col-sm-9">@Model.Date</div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="d-flex justify-content-center align-items-center h-100">
                <div>
                    <img class="img-fluid rounded" src="@($"data:image/jpg;base64,{Convert.ToBase64String(Model.Image)}")" alt="">
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12 text-center">
            <a class="btn btn-primary" asp-action="Upsert" asp-route-id="@Model.ProductId">Edit</a>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.ProductId">Delete</a>
        </div>
    </div>
</div>