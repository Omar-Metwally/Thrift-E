@model dynamic

<h1>@Model.ProductName</h1>
<p>Price: @Model.Price</p>
<p>In stock: @Model.InstockQty</p>
<p>Category: @Model.CategoryName</p>
<p>Measure of Scale: @Model.MeasureOfScale</p>


    <div>
    @{
        var base64 = Convert.ToBase64String(@Model.Image);
        var Image = String.Format("data:image/jpg;base64,{0}", base64);
    }
    <img width="500" height="500" src="@Image" alt="">
    </div>

<div>
    <a asp-action="Upsert" asp-route-id="@Model.ProductId">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    <a asp-action="Delete" asp-route-id="@Model.ProductId">Delete</a>
</div>
