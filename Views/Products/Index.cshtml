@model List<dynamic>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <p>
                <a asp-action="Upsert">Create New</a>
            </p>
            <tr>
                <th>Category Name</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>In Stock</th>
                <th>In Stock Qty</th>
                <th>Measure Of Scale</th>
                <th>New</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.ProductName</td>
                    <td>@item.Price</td>
                    <td>
                        @if (item.Instock)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">No</span>
                        }
                    </td>
                    <td>@item.InstockQty</td>
                    <td>@item.MeasureOfScale</td>
                    <td>
                        @if (item.NewOrUsed)
                    {
                            <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                            <span class="badge bg-danger">No</span>
                    }
                    </td>
                    <td>
                        @{
                            var base64 = Convert.ToBase64String(@item.Image);
                            var Image = String.Format("data:image/jpg;base64,{0}", base64);
                        }
                        <img width="500" height="500" src="@Image" alt="">
                    </td>
                    <td>
                        <a asp-action="Upsert" asp-route-id="@item.ProductId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>|
                            <a asp-action="Details" asp-route-id="@item.ProductId">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
