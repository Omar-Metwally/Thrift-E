@model List<ProductViewModel>
@{
    ViewData["Title"] = "Store";
    Layout = "../Shared/_Layout.cshtml";
}
<!-- Shop Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <div class="col-lg-2 col-md-10">
            <!-- Price Start -->
            <div class="border-bottom mb-4 pb-4">
                <h5 class="font-weight-semi-bold mb-4">Filter by price</h5>
                <form method="post">
                    <div class="form-check d-flex align-items-center justify-content-between mb-3">
                        <a class="form-check-input" asp-controller="Products" asp-action="StoreFilter"></a>
                        <label class="form-check-label" for="price-all">All Price</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                    <div class="form-check d-flex align-items-center justify-content-between mb-3">
                        <a class="form-check-input" asp-controller="Products" asp-action="StoreFilter" asp-route-Low="0" asp-route-High="100"></a>
                        <label class="form-check-label" for="price-1">0 - 100</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                    <div class="form-check d-flex align-items-center justify-content-between mb-3">
                        <a class="form-check-input" asp-controller="Products" asp-action="StoreFilter" asp-route-Low="100" asp-route-High="200"></a>
                        <label class="form-check-label" for="price-2">100 - 200</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                    <div class="form-check d-flex align-items-center justify-content-between mb-3">
                        <a class="form-check-input" asp-controller="Products" asp-action="StoreFilter" asp-route-Low="200" asp-route-High="300"></a>
                        <label class="form-check-label" for="price-2">200 - 300</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                    <div class="form-check d-flex align-items-center justify-content-between mb-3">
                        <a class="form-check-input" asp-controller="Products" asp-action="StoreFilter" asp-route-Low="300" asp-route-High="400"></a>
                        <label class="form-check-label" for="price-2">300 - 400</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                    <div class="form-check d-flex align-items-center justify-content-between mb-3">
                        <a class="form-check-input" asp-controller="Products" asp-action="StoreFilter" asp-route-Low="400" asp-route-High="500"></a>
                        <label class="form-check-label" for="price-2">400 - 500</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                    <div class="form-check d-flex align-items-center justify-content-between mb-3">
                        <a class="form-check-input" asp-controller="Products" asp-action="StoreFilter" asp-route-Low="500" asp-route-High="1000"></a>
                        <label class="form-check-label">500 - 1000</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                </form>
            </div>
            <!-- Price End -->
            <!-- Color Start -->
            <div class="border-bottom mb-4 pb-4">
                <h5 class="font-weight-semi-bold mb-4">Filter by category</h5>
                <form>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <a class="form-check-input" asp-controller="Products" asp-action="StoreFilter"></a>
                        <label class="custom-control-label">All Categories</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <a class="form-check-input" asp-controller="Products" asp-action="StoreFilter" asp-route-CategoryId="1"></a>                        
                        <label class="custom-control-label">Men T-shirts</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <a class="form-check-input" asp-controller="Products" asp-action="StoreFilter" asp-route-CategoryId="2"></a>                        
                        <label class="custom-control-label">Jackects</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <a class="form-check-input" asp-controller="Products" asp-action="StoreFilter" asp-route-CategoryId="3"></a>                        
                        <label class="custom-control-label">Sweatshirt</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <a class="form-check-input" asp-controller="Products" asp-action="StoreFilter" asp-route-CategoryId="4"></a>                        
                        <label class="custom-control-label">Jeans</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
                        <a class="form-check-input" asp-controller="Products" asp-action="StoreFilter" asp-route-CategoryId="5"></a>                        
                        <label class="custom-control-label">Caps</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                </form>
            </div>
            <!-- Color End -->
            <!-- Size Start -->
            <div class="mb-5">
                <h5 class="font-weight-semi-bold mb-4">Filter by size</h5>
                <form>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input" checked id="size-all">
                        <label class="custom-control-label">All Size</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input">
                        <label class="custom-control-label">XS</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input">
                        <label class="custom-control-label">S</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input">
                        <label class="custom-control-label">M</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input">
                        <label class="custom-control-label">L</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
                        <input type="checkbox" class="custom-control-input">
                        <label class="custom-control-label">XL</label>
                        <span class="badge rounded-pill bg-light text-dark">0</span>
                    </div>
                </form>
            </div>
            <!-- Size End -->
        </div>
        <!-- Shop Sidebar End -->
        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-12">
            <div class="row pb-3">
                <div class="col-12 pb-1">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <form method="post">
                            <div class="input-group">
                                <input type="text" class="form-control" name="word">
                                <div class="input-group-append">
                                    <button type="submit" class="input-group-text bg-transparent text-primary"
                                            asp-controller="Products" asp-action="StoreSearch" >
                                        <i class="bi bi-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                        <div class="dropdown ml-4">
                            <button class="btn border dropdown-toggle" type="button" id="triggerId" data-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="false">
                                Sort by
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="triggerId">
                                <a class="dropdown-item" href="#">Latest</a>
                                <a class="dropdown-item" href="#">Popularity</a>
                                <a class="dropdown-item" href="#">Best Rating</a>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                    <div class="card product-item border-0 mb-4">
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                            <img class="img-fluid w-100" src="@item.Image1" alt="">
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate">@item.ProductName</h6>
                                <h6 class="text-truncate">@Html.Raw(item.Description)</h6>
                                <div class="d-flex justify-content-center">
                                <h6>@item.Price EGP</h6>
                                </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                                <a class="btn btn-sm text-dark p-0" asp-controller="Products" asp-action="Details" asp-route-ProductId="@item.ProductId"><i class="bi bi-eye text-primary m-1"></i>View Detail</a>
                                <a class="btn btn-sm text-dark p-0" asp-controller="Carts" asp-action="Upsert" asp-route-ProductId="@item.ProductId"><i class="bi bi-bag text-primary m-1"></i>Add To Cart</a>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
        <!-- Shop Product End -->
    </div>
</div>
<!-- Shop End -->

