@model List<CartViewModel>

@{
    double? totalAmount = 0;
    int? items = 0;
    ViewData["Title"] = "Shopping Cart";

}
<form method="post">
    <section class="h-100 h-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12">
                <div>
                    <div class="card-body p-0">
                        <div class="row g-0">
                            <div class="col-lg-8">
                                <div class="p-5">
                                    <div class="d-flex justify-content-between align-items-center mb-5">
                                        <h1 class="fw-bold mb-0 text-black">Shopping Cart</h1>
                                    </div>
                                    <hr class="my-4">
                                    @foreach (var item in Model){
                                            double? itemTotal = ((double)item.Price * item.Qty);
                                            totalAmount += itemTotal;
                                            <input type="hidden" value="@item.ProductId" />
                                            <input type="hidden" value="@item.CustomerId" />
                                    <div class="row mb-4 d-flex justify-content-between align-items-center">
                                        <div class="col-md-2 col-lg-2 col-xl-2">
                                                <img src="@item.Image1"
                                                 class="img-fluid rounded-3" alt="Cotton T-shirt">
                                        </div>
                                        <div class="col-md-3 col-lg-3 col-xl-3">
                                            <h6 class="text-muted">@item.CategoryName</h6>
                                            <h6 class="text-black mb-0">@item.ProductName</h6>
                                        </div>
                                        <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                                    <button class="btn btn-link px-2"
                                                            type="submit"
                                                        asp-action="Minus" asp-route-ProductId="@item.ProductId" asp-route-CustomerId="@item.CustomerId">
                                                        <i class="bi bi-dash-circle"></i>
                                                    </button>
                                            <input id="form1" min="0" name="quantity" value="@item.Qty" type="number"
                                                           class="form-control form-control-sm" />
                                                    <button class="btn btn-link px-2"
                                                            type="submit"
                                                        asp-action="Plus" asp-route-ProductId="@item.ProductId" asp-route-CustomerId="@item.CustomerId">
                                                        <i class=" bi bi-plus-circle"></i>
                                                    </button>
                                        </div>
                                        <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                                <h6 class="mb-0">@(item.Price * item.Qty) EGP</h6>
                                        </div>
                                        <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                            <a href="#!" class="text-muted"><i class="fas fa-times"></i></a>
                                        </div>
                                    </div>
                                            <hr class="my-4">
                                            items++;
                                        }
                                    


                                    <div class="pt-5">
                                        <h6 class="mb-0">
                                            <a href="#!" class="text-body">
                                                <i class="fas fa-long-arrow-alt-left me-2"></i>Back to shop
                                            </a>
                                        </h6>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 bg-grey">
                                <div class="p-5">
                                    <h3 class="fw-bold mb-5 mt-2 pt-1">Summary</h3>
                                    <hr class="my-4">

                                    <div class="d-flex justify-content-between mb-4">
                                        <h5 class="text-uppercase">@items Items</h5>
                                            <h5>@totalAmount EGP</h5>
                                    </div>

                                    <h5 class="text-uppercase mb-3">Shipping</h5>

                                    <div class="mb-4 pb-2">
                                            Standard Delivery 20 EGP
                                    </div>

                                        <h5 class="text-uppercase mb-3">Delivery Location</h5>

                                    <div class="mb-1">
                                        <div class="form-outline">
                                                <input type="text" id="Area" name="Area" class="form-control form-control-lg" placeholder="Enter Your Area" required/>
                                                <label class="form-label" for="Area">Area</label>
                                        </div>
                                    </div>
                                    <div class="mb-1">
                                        <div class="form-outline">
                                                <input type="text" id="Streat" name="Streat" class="form-control form-control-lg" placeholder="Enter Your Street" required />
                                                <label class="form-label" for="Streat">Street</label>
                                        </div>
                                    </div>
                                    <div class="mb-1">
                                            <div class="form-outline">
                                                <input type="text" id="House" name="House" class="form-control form-control-lg" placeholder="Enter Your House Num" required />
                                                <label class="form-label" for="House">House</label>
                                            </div>
                                    </div>

                                    <hr class="my-4">

                                    <div class="d-flex justify-content-between mb-5">
                                        <h5 class="text-uppercase">Total price</h5>
                                            <h5>@(totalAmount + 20) EGP</h5>
                                    </div>
                                        <input type="submit" value="Order" class="btn btn-dark btn-block btn-lg"
                                               data-mdb-ripple-color="dark" asp-controller="Orders" asp-action="Confirm1" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</form>