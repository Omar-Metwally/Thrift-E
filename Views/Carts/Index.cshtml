@model List<CartViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <p>
                <a asp-action="Upsert">Create New</a>
            </p>
            <tr>
                <th>Product Name</th>
                <th>Category Name</th>
                <th>Total</th>
                <th>Quantity</th>
                <th>Measure Of Scale</th>
                <th>NewOrUsed</th>
                <th>Image</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Price</td>
                    <td>
                        <input type="hidden" name="cartItems[@item.CustomerId].CartId" value="@item.CustomerId" />
                        <input type="number" name="cartItems[@item.CustomerId].Qty" value="@item.Qty" />
                    </td>
                    <td>@item.MeasureOfScaleName</td>
                    <td>
                        @if (item.NewOrUsed)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">No</span>
                        }
                    </td>
                    <td><img width="50" height="50" src="@item.Image1" alt=""></td>
                    <td>
                        <a asp-action="Upsert" asp-route-id="@item.ProductId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
